/* PRODUCT PAGE STYLES */

#content-details {
 padding: 15px;
}

#details-article {
 padding: 0px 40px;
}

#article-title {
 margin-top: 0px;
 font-weight: 800;
}

#details-aside {
 transform: translateY(-30px);
 padding-right: 40px;
}

#products {
 padding: 0 40px;
 margin-left: -30px;
}

.product {
 background: white;
 margin-bottom: 30px;
 float: left;
 margin-left: 30px;
 position: relative;
}

.product a {
 text-decoration: none;
 width: 100%;
 height: 100%;
 display: block;
}

.product-image-container {
 width: 190px;
 height: 150px;
 position: relative;
}

.product-price {
 background: #df5a8e;
 color: white;
 position: absolute;
 top: 0;
 right: 0;
 z-index: 10;
 font-weight: 300;
 padding: 5px 20px 5px 10px;
 transform: translateX(10px);
 transition: all .2s ease-in;
 min-width: 65px;
}

.product:hover .product-price {
 min-width: 200px;
 background: #5cb85c;
}

.product-price:after {
 content: '';
 width: 0;
 height: 0;
 border-style: solid;
 border-width: 10px 10px 0 0 ;
 border-color: #c3316a transparent transparent transparent;
 position: absolute;
 bottom: -10px;
 right: 0px;
 transition: all .2s ease-in;
}

.product:hover .product-price:after {
 border-color: #398439 transparent transparent transparent;
}

.product-title {
 font-weight: 300;
 padding: 5px 0;
 margin-bottom: 0px;
}

/* RECEIPT */

#content-receipt {
    background: #eee;
    height: 400px;
    width: 100%;
    margin: 0;
    position:  relative;
}

#receipt-container {
    position: relative;
    width: 50%;
    height: 75%;
    background: white;
    margin: -20px auto 0 auto;
    box-shadow: 0px -5px 5px 0px rgba(0, 0, 0, 0.2);
    z-index: 1;
}

.dotmatrix {
    background: url('<%= asset_path 'dot-matrix.svg' %>') 50% 0% repeat-y #fff;
    height: 100%;
    background-size: 50%;
    width: 10%;
    position: absolute;
}

.dotmatrix.left {
    border-right: 1px dotted #ccc;
    left: 0px;
}

.dotmatrix.right {
    border-left: 1px dotted #ccc;
    right: 0px;
}

#receipt-content {
    position: absolute;
    left: 0px;
    top: 0px;
    padding: 15px 15%;
    width: 100%;
    color: #666;
}

#receipt-title {
    font-weight: 800;
    border-bottom: 1px dotted #ccc;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

#receipt-shadow {
    position: absolute;
    width: 60%;
    height: 20px;
    border-radius: 20px;
    background: #666;
    left: 50%;
    -webkit-transform: translate(-50%,-15px);
    transform: translate(-50%,-15px);
    box-shadow: inset 0px 5px 5px 0px rgba(0, 0, 0, 0.5);
}

#receipt-footer {
    padding-top: 15px;
    margin-top: 15px;
    border-top: 1px dotted #ccc;
}

#receipt-footer small {
    font-size: 10px;
    font-weight: 300;
}

